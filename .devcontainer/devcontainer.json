{
    "name": "TensorFlow GPU Jupyter",
    "image": "tensorflow/tensorflow:latest-gpu-jupyter",
    "postCreateCommand": "pip install -r requirements.txt",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "runArgs": [
        "--gpus=all",
        "--memory=12gb",
        "--shm-size=6gb"
    ]
}
